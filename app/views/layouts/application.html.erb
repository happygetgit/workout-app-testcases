<!DOCTYPE html>
<html>
  <head>
    <title>WorkoutAppTestcases</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render "shared/header" %>
    <div class="row">
      <div class="col-md-12">
        <% flash.each do |key, message| %>
          <div class="text-center alert alert-<%= key == 'notice' ? 'sucess' : 'danger' %>">
            <%= message %>
          </div>
        <% end %>
      </div>
      
    </div>
    <%= yield %>
   
  </body>
</html>
